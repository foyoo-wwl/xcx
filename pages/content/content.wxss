/* pages/content/content.wxss */
.postContent{
  width:100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.mapId{
  text-align: center;
}
.imgPostBtn,.saveBtn{
  width:200rpx;
  height:100rpx;
  margin-top: 30rpx;
}
.postImg{
  width:300rpx;
  height:300rpx;
  display: block;
  margin-top: 30rpx;
}
.postText{
  width:80%;
  height:210rpx;
  border:1rpx solid #ccc;
  border-radius: 5rpx;
  text-indent: 10rpx;
  margin-top:30rpx;
  font-size: 40rpx;
  line-height: 70rpx;
}
.postWrap{
  width:100%;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.imgWrap{
  width:100%;
  height:100%;
  position: fixed;
  left:0;
  top:0;
  background: #fff;
  z-index: 100;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.imgBox{
  width:50%;
}